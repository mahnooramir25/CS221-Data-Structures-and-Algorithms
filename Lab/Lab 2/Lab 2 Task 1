// Lab 2 Task 1.cpp : This file contains the 'main' function. Program execution begins and ends there.
//Write a C++ program of a structure variable to assign data to three members, i-e name,
//age and salary of a person and display it on screen.

#include <iostream>
using namespace std;

struct Person {
    string name;
    int age;
    int salary;
};
int main()
{
    Person p1[5];
    cout << "Enter information for 3 users " << endl;
    for (int i = 0; i < 3; i++) {
        cout << "Name: " << endl;
        cin >> p1[i].name;
        cout << "Age: " << endl;
        cin >> p1[i].age;
        cout << "Salary: " << endl;
        cin >> p1[i].salary;
    }
    cout << endl;
    for (int i = 0; i < 3; i++) {
        cout << "\tUser" << i+1 << ":" << endl;
        cout << "Name: " << p1[i].name << endl;
        cout << "Age: " << p1[i].age << endl;
        cout << "Salary: " << p1[i].salary << endl;
    }





}

